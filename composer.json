{
    "name": "nexxai/laravel-cfcache",
    "type": "library",
    "description": "A handful of Cloudflare cache helpers for Laravel",
    "keywords": [
        "laravel",
        "cloudflare",
        "cache",
        "cf",
        "waf",
        "cdn"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "illuminate/console": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "~1.25.0",
        "mockery/mockery": "^1.4.4",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpunit/phpunit": "^11.0|^12.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JTSmith\\Cloudflare\\PageCacheServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "JTSmith\\Cloudflare\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ]
    }
}
